@model Bingo_CSD_412.Models.Category

@{
    ViewData["Title"] = Model.Name + " Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <a asp-action="Index">Back to Categories</a>
</div>
<br />
<div>
    <a asp-action="AddWordToCategory" asp-route-categoryName="@Model.Name">Add Word To Category</a>
</div>
<div>
    <table class="tab-content" style="width:70%">
        <tr>
            <th>
                Word
            </th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Words.Length; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Words[i])
                </td>
                <td>
                    <form asp-action="RemoveWordFromCategory">
                        &nbsp;
                        <input type="hidden" name="categoryName" value="@Model.Name" />
                        <input type="hidden" name="word" value="@Model.Words[i]" />
                        <input type="submit" value="Remove" class="btn-link" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>

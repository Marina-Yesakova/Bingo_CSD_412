@model Bingo_CSD_412.Models.Category

@{
    ViewData["Title"] = "Create New Category";
}

<h2>Create New Category</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label for="categoryName" class="control-label">Category Name</label>
                <input name="categoryName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Categories</a>
</div>
